{
  "env": {
    "browser": true,
    "es2021": true,
    "node": true,
    "jest": true
  },
  "extends": ["standard", "prettier"],
  "parser": "@typescript-eslint/parser",
  "parserOptions": {
    "ecmaFeatures": {
      "jsx": true,
      "tsx": true
    },
    "ecmaVersion": 12,
    "sourceType": "module"
  },
  "globals": {
    "Base":"readonly"
  },
  "plugins": ["react", "prettier", "@typescript-eslint"],
  "rules": {
    "react/prop-types": "off",
    "no-unused-vars": "warn",
    "spaced-comment":"off"
  },
  "overrides": [
    {
      "files": ["*.json"],
      "rules": {
        "no-unused-expressions": "off"
      }
    }
  ]
}
